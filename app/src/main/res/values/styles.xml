<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_bound_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="input_bound_field_numb">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_fields</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/main_margin</item>
        <item name="android:maxLength">18</item>
    </style>

    <style name="start_end_results_numb">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:background">@drawable/background_fields</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/main_margin</item>
    </style>

    <style name="hints_search_numb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_result_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_fields</item>
    </style>

    <style name="text_fields">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>


</resources>