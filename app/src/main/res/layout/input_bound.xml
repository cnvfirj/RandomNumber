<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragmentNumb"
            type="com.kittendevelop.randomnumber.ui.number.FragmentNumb" />
        <variable
            name="fill"
            type="com.kittendevelop.randomnumber.ui.number.InputFill" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_input"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText style="@style/input_bound_field_numb"
            android:id="@+id/input_from"
            android:hint="@string/input_from"
            android:text="@{fill.valueFrom}"
            android:backgroundTint="@{fill.colorBackground.intValue()}"
            app:addTextChangedListener="@{fill.watchFrom}"/>

        <EditText style="@style/input_bound_field_numb"
            android:id="@+id/input_to"
            android:hint="@string/input_to"
            android:text="@{fill.valueTo}"
            app:addTextChangedListener="@{fill.watchTo}"
            android:backgroundTint="@{fill.colorBackground.intValue()}"/>

    </LinearLayout>

    </LinearLayout>
</layout>