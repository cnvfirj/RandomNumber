<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_fields">

        <TextView style="@style/hints_search_numb"
            android:id="@+id/result_info"
            android:gravity="center_horizontal"
            android:text="@string/result_dew"
            android:textSize="15sp"
            app:autoSizeTextType="uniform"/>


        <FrameLayout style="@style/start_end_results_numb"
            android:layout_width="match_parent"
            android:backgroundTint="@color/white">

            <TextView
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/result_numb"
                android:backgroundTint="@color/white"
                android:text="15555555555555555555555555"
                android:textSize="50sp"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeMinTextSize="15sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform"
                android:maxLines="1"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button style="@style/start_end_results_numb"
                android:id="@+id/result_exit"
                android:text="exit"/>

            <Button style="@style/start_end_results_numb"
                android:layout_width="match_parent"
                android:id="@+id/result_aply"
                android:text="apply"/>

        </LinearLayout>

    </LinearLayout>

</layout>